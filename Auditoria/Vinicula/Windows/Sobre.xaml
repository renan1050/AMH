                 />
               
        <Label x:Name="lbSoftware" Content="Projeto:" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtSoftwaretxt" IsEnabled="False" HorizontalAlignment="Left" Height="80" Margin="96,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="424" 
