<Window x:Class="Vinicula.ConsultaPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulta de Perfil" Height="416" Width="545" Background="#FFC4D7FF" Foreground="#FF1700FF">
    <Grid>
        <TextBox x:Name="perNome" LostFocus="proNome_LostFocus" HorizontalAlignment="Left" Height="23" Margin="23,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="499" Foreground="#FF1700FF" BorderBrush="#FF0A1444"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Width="287" Foreground="#FF1700FF"/>

        <DataGrid x:Name="dtRegistros" IsReadOnly="True" HorizontalAlignment="Left" Margin="23,90,0,0" VerticalAlignment="Top" Height="238" Width="499" Foreground="#FF1700FF" BorderBrush="#FF0A1444"/>
        <Button Content="Novo" HorizontalAlignment="Left" Margin="447,349,0,0" VerticalAlignment="Top" Width="75" Background="#FF4882FF" BorderBrush="#FF0A1444" Foreground="#FF1700FF" Click="Button_Click"/>

    </Grid>
</Window>
